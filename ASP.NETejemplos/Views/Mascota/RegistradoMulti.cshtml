<br/>
<h3>Mascota muti fotos</h3>

<table border="1">
    <tr>
        <td>ID</td>
        <td>@ViewBag.mascotas.id</td>
    </tr>
    <tr>
        <td>Nombre</td>
        <td>@ViewBag.mascotas.nombre</td>
    </tr>
    <tr>
        <td>Precio</td>
        <td>@ViewBag.mascotas.precio</td>
    </tr>
    <tr>
        <td>Imagen</td>
        <td>
            @foreach(var img in ViewBag.mascotas.imagenes){
                <img src="~/imagenes/@img" width="150"/>
            }
        </td>
    </tr>
</table>

<a asp-controller="Mascota" asp-action="IndexMulti">Volver...</a>